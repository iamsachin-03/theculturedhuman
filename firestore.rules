
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public can read, only admins can write
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // Public can read, only admins can write
    match /proverbs/{proverbId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
  }
}
