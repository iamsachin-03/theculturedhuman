rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for posts
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Rules for music
    match /music/{musicId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Rules for proverbs
    match /proverbs/{proverbId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Rules for bazaar
    match /bazaar/{productId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Rules for visits
    match /visits/counter {
      allow read, write: if true;
    }

    // Default deny for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
